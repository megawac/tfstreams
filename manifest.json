{
   "version": "1.2.2",
   "manifest_version": 2,

   "description": "Displays streams from teamfortress.tv. Grabs streams from http://teamfortress.tv/rss/streams",
   "name": "TF TV Streams",
   "update_url": "http://clients2.google.com/service/update2/crx",
   "options_page": "options.html",

   "permissions": [ "http://teamfortress.tv/rss/*/",
                     "notifications" ],
   "browser_action": {
      "default_icon": "img/icon.png",
      "default_popup": "popup.html"
   },
   "background": {
      "scripts": ["js/browser/chrome.js",
                  "js/tf.xmlparser.js",
                  "js/tf.background.js"]
   },
   "icons":{  
      "128":"img/ext.png"
   }
}